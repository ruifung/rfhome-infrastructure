[Unit]
Description=Tailscale Subnet Route BIRD controller
After=bird.service tailscaled.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 -u /root/ts-subnet-route-manager.py /var/run/bird/bird.ctl
Restart=on-failure
RestartSec=2s

# Run as root to access /var/run/bird sockets
User=root
Group=root

[Install]
WantedBy=multi-user.target
